<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado normal -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#009688" /> <!-- Color de fondo en estado normal -->
            <corners android:radius="10dp" /> <!-- Radio de esquinas -->
        </shape>
    </item>

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#007766" /> <!-- Color de fondo cuando se presiona -->
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>
