<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bordes_superiores_redondeados">


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/misionButton"
                android:text="Misi칩n"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/color_mision"
            android:layout_margin="8dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/visionButton"
                android:text="Visi칩n"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/color_vision"
            android:layout_margin="8dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cursosButton"
                android:text="Cursos"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/color_cursos"
            android:layout_margin="8dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gestionUsuarioButton"
                android:text="Gesti칩n de Usuario"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/color_gestion_usuario"
            android:layout_margin="8dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/acercaDeButton"
                android:text="Acerca de Nosotros"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/color_acerca_de"
            android:layout_margin="8dp" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saberMasButton"
                android:text="Saber m치s"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:background="@color/color_saber_mas"
            android:layout_margin="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
